{
  "name": "myst-templates-api",
  "private": true,
  "description": "API for browsing and downloading MyST templates",
  "author": "Rowan Cockett <rowan@curvenote.com>",
  "homepage": "https://github.com/myst-templates",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/myst-templates/templates.git"
  },
  "bin": {
    "myst-templates": "./dist/myst-templates.js"
  },
  "scripts": {
    "clean": "rimraf dist _build api",
    "unlink": "npm uninstall -g myst-templates;",
    "link": "npm run unlink; npm link;",
    "dev": "npm run link && esbuild cli/index.ts --bundle --outfile=dist/myst-templates.js --platform=node --watch",
    "build:cli": "esbuild cli/index.ts --bundle --outfile=dist/myst-templates.js --platform=node",
    "build:api": "esbuild src/index.ts src/utils.ts --outdir=api --platform=node --format=cjs",
    "copy:data": "mkdir api && mkdir api/data && copyfiles -f src/data/*.json api/data",
    "build": "npm-run-all -l clean copy:data -p build:cli build:api",
    "start": "vercel dev",
    "deploy": "vercel deploy --prod",
    "lint:format": "prettier --check api/**/*.ts"
  },
  "bugs": {
    "url": "https://github.com/myst-templates/templates/issues"
  },
  "dependencies": {
    "@types/express": "^4.17.16",
    "express": "^4.18.2",
    "js-yaml": "^4.1.0",
    "myst-cli-utils": "^0.0.10",
    "myst-common": "^0.0.12",
    "myst-templates": "^0.1.6",
    "node-fetch": "^3.3.0",
    "simple-validators": "^0.0.3",
    "unist-util-remove": "^3.1.1",
    "unist-util-select": "^4.0.3",
    "vercel": "^28.15.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^18.11.18",
    "commander": "^9.4.0",
    "copyfiles": "^2.4.1",
    "esbuild": "^0.14.53",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.3",
    "rimraf": "^4.1.2",
    "typescript": "^4.9.5"
  }
}
